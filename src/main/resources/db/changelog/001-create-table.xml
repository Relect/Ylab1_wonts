<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

        <property name="now" value="now()" dbms="mysql,h2"/>
        <property name="now" value="current_timestamp" dbms="postgresql"/>
        <property name="now" value="sysdate" dbms="oracle"/>
        <property name="now" value="getdate()" dbms="mssql"/>

        <changeSet id="create_table_users" author="Romanov Gennady">
                <createTable tableName="users">
                        <column name="id" autoIncrement="true" type="bigint">
                                <constraints primaryKey="true" nullable="false"/>
                        </column>
                        <column name="name" type="varchar(64)"/>
                        <column name="email" type="varchar(64)">
                                <constraints nullable="false" unique="true"/>
                        </column>
                        <column name="password" type="varchar(64)">
                                <constraints nullable="false" unique="true"/>
                        </column>
                        <column name="admin" type="boolean" defaultValue="false">
                                <constraints nullable="false"/>
                        </column>
                        <column name="block" type="boolean" defaultValue="false">
                                <constraints nullable="false"/>
                        </column>
                </createTable>
        </changeSet>

        <changeSet id="create_table_wonts" author="Romanov Gennady">
                <createTable tableName="wonts">
                        <column name="id" autoIncrement="true" type="bigint">
                                <constraints primaryKey="true" nullable="false"/>
                        </column>
                        <column name="user_id" type="bigint">
                                <constraints foreignKeyName="user_id_fk"
                                             referencedTableName="users"
                                             referencedColumnNames="id"/>
                        </column>
                        <column name="name" type="varchar(64)"/>
                        <column name="info" type="varchar(255)"/>
                        <column name="freq" type="varchar(20)">
                                <constraints nullable="false"/>
                        </column>
                        <column name="created_at" type="datetime" defaultValue="${now}">
                                <constraints nullable="false"/>
                        </column>
                        <column name="done" type="boolean" defaultValue="false">
                                <constraints nullable="false"/>
                        </column>
                </createTable>
        </changeSet>
        
        <changeSet id="create_table_done" author="Romanov Gennady">
                <createTable tableName="done">
                        <column name="wont_id" type="bigint">
                                <constraints foreignKeyName="wont_id_fk"
                                             referencedTableName="wonts"
                                             referencedColumnNames="id"/>
                        </column>
                        <column name="exec" type="datetime" defaultValue="${now}">
                                <constraints nullable="false"/>
                        </column>
                </createTable>
        </changeSet>

</databaseChangeLog>